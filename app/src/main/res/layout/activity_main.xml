<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.lmy.library.typeface.SiYuanFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World RegularSan! 思源字体"
        app:fontTypeface="regularSan"
        android:textColor="#000000"
        android:padding="10dp"
       />



    <com.lmy.library.typeface.SiYuanFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:background="@color/colorAccent"
        app:fontTypeface="bookAir"
        android:includeFontPadding="false"
        android:textColor="#ffffff"
       />

    <com.lmy.library.typeface.SiYuanFontTextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:background="@color/colorAccent"
        android:text="00"
        app:fontTypeface="mediumAir"
        android:textColor="#ffffff"
       />

    <com.lmy.library.typeface.SiYuanFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:includeFontPadding="false"
        android:text="哈哈"
        app:fontTypeface="normalSan"
        android:textColor="#ffffff"
       />

    <com.lmy.library.typeface.SiYuanFontTextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:includeFontPadding="false"
        android:text="哈哈"
        app:fontTypeface="mediumSan"
        android:textColor="#ffffff"
       />
    <TextView
        android:text="Hello World RegularSan!默认字体"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>