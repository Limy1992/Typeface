<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--      private static final String REGULAR = "sanRegular";
        private static final String AIR_MEDIUM = "airMedium";
        private static final String AIR_BOOK = "airBook";
        private static final String SNA_MEDIUM = "sanMedium";
        private static final String SNA_NORMAL = "sanNormal";-->
    <declare-styleable name="SiYuanFontTextView">
        <attr name="fontTypeface" format="enum">
            <enum name="regularSan" value="1" />
            <enum name="mediumAir" value="2" />
            <enum name="bookAir" value="3" />
            <enum name="mediumSan" value="4" />
            <enum name="normalSan" value="5" />
        </attr>
    </declare-styleable>

    <!-- Custom Class Styles -->

    <style name="TextViewStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextFieldRegular" parent="TextViewStyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="fontPath">fonts/NotoSansHans-Regular.otf</item>
    </style>

    <style name="TextFieldAirBook" parent="TextViewStyle">
        <item name="fontPath">fonts/Avenir-Book.otf</item>
    </style>

    <style name="TextFieldAirMedium" parent="TextViewStyle">
        <item name="fontPath">fonts/Avenir-Medium.otf</item>
    </style>

    <style name="TextFieldMedium" parent="TextViewStyle">
        <item name="fontPath">fonts/NotoSansHans-Medium.otf</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextFieldNormal" parent="TextViewStyle">
        <item name="fontPath">fonts/SourceHanSansCN-Normal-2.otf</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>